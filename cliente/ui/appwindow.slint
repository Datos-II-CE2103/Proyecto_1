import { Button, VerticalBox, HorizontalBox } from "std-widgets.slint";
component ButtonUp inherits Rectangle {
    in-out property text <=> txt.text;
    callback clicked <=> touch.clicked;
    border-radius: 5px;
    background: #0c9c4c;
    //touch.pressed ? #4CACAC  : touch.has-hover ? #50d98e :  #0C9C4C;
    height: 10%;
    width: 5%;
    txt := Text {
        font-size: 15px;
        height: 90%;
        width: 60%;
        color: touch.pressed ? #fff : #eee;
    }

    touch := TouchArea { }
}
component ButtonDown inherits Rectangle {
    in-out property text <=> txt.text;
    callback clicked <=> touch.clicked;
    border-radius: 5px;
    background: #9c0c0c;
    //touch.pressed ? #4CACAC  : touch.has-hover ? #50d98e :  #0C9C4C;
    height: 10%;
    width: 5%;
    txt := Text {
        font-size: 15px;
        height: 90%;
        width: 60%;
        color: touch.pressed ? #fff : #eee;
    }

    touch := TouchArea { }
}

